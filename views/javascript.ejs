<!doctype html>
<html>
  <head>
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <title><%=appName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1><%=appName%></h1>
    <h2>Here are the books for studying JavaScript:</h2>
    <ul class="database">
      <% availableBooks.forEach(book => { %>
      <li class="database">
        <label class="container">
          <!-- <a href="<%=availableBooks[0].link%>"><%=availableBooks[0].name%></a> -->
          <a href="<%=book.link%>"><%=book.name%></a>
          <input type="checkbox" 
            data-book-id="<%=book.id%>" 
            class="book-read-checkbox">
            <%= book.is_read ? 'checked' : '' %>
        <span class="checkmark"></span>
      </label>
    </li>
    <% }) %>
  </ul>
    <p><a href="/">Go back to the main page</a></p>'
  </body>
</html> 